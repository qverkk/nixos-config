(defwidget volume_module []
  (box
    :class "module icon"
    (eventbox
      :onclick "hyprctl dispatch exec [float] pavucontrol"
      (box
        (label
          :class "vol-icon"
          :text "${volume.output.muted == "" ? '' : ''} ${volume.output.volume}%")
        (label
          :class "vol-icon"
          :text "${volume.input.muted == "" ? '' : '' } ${volume.input.volume}%")))))