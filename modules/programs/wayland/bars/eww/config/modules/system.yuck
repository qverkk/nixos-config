(defwidget system_module []
  (box
    :class "module"
    (eventbox
      :onclick "${EWW_CMD} open --toggle system-menu"
      (box
        :space-evenly false
        :spacing 5
        (label
          :text "${EWW_BATTERY == "" ? "" : 'Battery' + EWW_BATTERY["BAT0"].capacity + '%'}")
        (label
          :text "RAM ${round(EWW_RAM.used_mem_perc,0)}%"
          :class "rambar")
        (label
          :text "CPU ${round(EWW_CPU.avg,0)}%"
          :class "cpubar")))))