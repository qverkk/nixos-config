(defpoll time :interval "5s" `date +'{"date": "%d/%m/%y", "hour": "%H", "minute": "%M", "day": "%A"}'`)
(defpoll volume :interval "1s" "scripts/volume")
(defpoll network :interval "1s" "scripts/network")
(defpoll airplane :interval "5s" "scripts/airplane")
(defpoll bluetooth :interval "5s" "scripts/bluetooth")
(defpoll brightness :interval "5s" 'brightnessctl | rg -o "\d+%"')

(deflisten workspace "scripts/workspaces")
(deflisten music "scripts/music")
(deflisten battery "scripts/batteryrs/target/release/batteryrs")