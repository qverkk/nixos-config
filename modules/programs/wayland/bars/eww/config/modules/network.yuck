(defwidget network_module []
  (eventbox
    :onrightclick "hyprctl dispatch exec [float] kitty nmtui"
    :onclick "${EWW_CMD} open --toggle network-menu"
    (overlay
      :class "module"
      (box
        :space-evenly false
        (label
          :class "icon"
          :text "${network.ethernet.enabled == "connected" ? '' : ''}")
        (label
          :class "icon"
          :text "${network.wifi.enabled == "connected" ? '直' : '睊'}")))))
